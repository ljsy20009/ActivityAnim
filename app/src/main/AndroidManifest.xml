<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kk.activityanim">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.OverridePendingActivity" />

        <activity
            android:name=".activity.OverridePendingStyleActivity"
            android:label="Activity动画-》style"
            android:theme="@style/overrideActivity" />

        <activity
            android:name=".activity.AppcompatCustomAnimationActivity"
            android:theme="@style/activityScene" />
        <activity
            android:name=".activity.AppcompatScaleUpAnimationActivity"
            android:theme="@style/activityScene" />
        <activity
            android:name=".activity.AppcompatSceneTransitionAnimationActivity"
            android:theme="@style/activityScene" />

        <activity
            android:name=".activity.AppcompatSceneTransitionAnimationStyleActivity"
            android:theme="@style/activitySceneStyle" />

        <activity
            android:name=".activity.AppcompatShareElementAnimationActivity"
            android:theme="@style/activityScene" />

    </application>
</manifest>
